<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Family Tree</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-dark">
  <%- include('navbar') %>
    <div class="container">
      <h2 class="text-center text-light my-3">Adding <%= data.person %>'s Father</h2>
      <div class="d-flex justify-content-center">
        <div class="bg-danger"></div>
        <form action="/addfather" method="post" class="w-25 bg-secondary p-3 rounded">
          <div class="mb-3 d-none">
            <label for="id" class="form-label text-light">id</label>
            <input type="text" class="form-control" id="id" name="id" value="<%= data.id %>">
          </div>
          <div class="mb-3">
            <label for="name" class="form-label text-light">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= data.person %>" readonly>
          </div>
          <div class="mb-3 d-none">
            <label for="gender" class="form-label text-light">Gender</label>
            <input type="text" class="form-control" id="gender" name="gender" value="<%= data.gender %>">
          </div>
          <div class="mb-3 d-none">
            <label for="relationid" class="form-label text-light">Relationid</label>
            <input type="text" class="form-control" id="relationid" name="relationid" value="<%= data.relationid %>">
          </div>
          <div class="mb-3">
            <label for="father" class="form-label text-light">Father</label>
            <select class="form-select" aria-label="Default select example" id="father" name="father">
              <option value="0" selected>Select</option>
              <% data.fathers.map((father)=>{ %>
                <option value="<%= father.id %>"><%= father.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3 text-center">
            <button type="submit" class="btn btn-dark w-75">Save</button>
          </div>
        </form>
        <div class="bg-success"></div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>