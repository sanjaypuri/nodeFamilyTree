<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Family Tree</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-dark">
  <%- include('navbar') %>
    <div class="container">
      <h2 class="text-light text-center pt-2">Welcome to the Family Tree - Relations</h2>
      <div class="container">
        <input class="form-control" type="text" id="filter" onkeyup="filterFunction()" placeholder="Search for names..">
        <table class="table table-dark table-striped" id="personsTable">
          <thead>
            <tr class="header">
              <th style="width:40%">Name</th>
              <th style="width:40%">Details</th>
              <th style="width:20%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% rows.map((row)=>{ %>
              <tr>
                <th>
                  <%= row.name%>
                </th>
                <td>
                  <%= row.details%>
                </td>
                <td>
                    <a href="/addrelations/<%= row.id%>"><button type="button" class="btn btn-sm btn-secondary">Add / Edit Relations</button></a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <script>
      function filterFunction() {
        var input, filter, table, tr, th, i, txtValue;
        input = document.getElementById("filter");
        filter = input.value.toUpperCase();
        table = document.getElementById("personsTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
          th = tr[i].getElementsByTagName("th")[0];
          if (th) {
            txtValue = th.textContent || th.innerText;
            if(txtValue != 'Name'){
              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        }
      }
    </script>
</body>

</html>