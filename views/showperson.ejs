<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Family Tee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %> 
    <% if(rows.length < 1) { %>
      <h2 class="text-center text-light mt-4">No relationships available. Please add relationships first</h2>
    <% } else { %>
      <h1 class="text-light text-center my-3">Family Tree for <%= rows[0].person1 %></h1>
      <div class="container w-50">
        <table class="table table-dark table-sttriped">
          <thead>
            <tr>
              <th>Relation</th>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% rows.map((row)=>{ %>
                <td><%= row.relation %></td>
                <td><%= row.person2 %></td>
              <% }) %>
            </tr>
          </tbody>
        </table>
      </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>