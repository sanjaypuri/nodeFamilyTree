<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Family Tree - Add Person</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %>
    <div class="container w-50 mt-4 rounded p-3 bg-secondary">
      <div class="text-light text-center fs-2">Details of New Person</div>
      <form action="/editperson" method="post">
        <input type="text" class="form-control" id="id" name="id" style="display: none;" value="<%= person.id %>">
        <div class="row mb-2">
          <div class="col-md-6">
            <label for="first" class="form-label">First Name<span class="text-danger"> *</span></label>
            <input type="text" class="form-control" id="first" name="first" placeholder="First Name" value="<%= person.first %>">
          </div>
          <div class="col-md-6">
            <label for="last" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="last" name="last" placeholder="Last Name" value="<%= person.last %>">
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label for="" class="form-label">Gender<span class="text-danger"> *</span></label>
            <select class="form-select" aria-label="Default select example" name="gender" id="genderSelect">
              <option selected>Select Gender</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>          
          </div>
          <div class="col-md-6">
            <label for="dob" class="form-label">Date of Birth</label>
            <input type="date" class="form-control" id="dob" name="dob" value="<%= person.dob %>">
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <div class="form-check">
              <br><input class="form-check-input bg-dark" type="checkbox" value="" id="aliveChecked" name="isalive">
              <label class="form-check-label text-light" for="aliveChecked">
                Is Alive?
              </label>
            </div>          
          </div>
          <div class="col-md-6">
            <label for="dod" class="form-label">Date of Death</label>
            <input type="date" class="form-control" id="dod" name="dod" value="<%= person.dod %>">
          </div>
        </div>
        <div class="row pt-2">
          <div class="col text-center">
            <button class="btn btn-dark w-75" type="submit">Save</button>
          </div>
        </div>
        <div style="font-size: 0.7rem;" class="text-danger text-start">* Mandatory fields</div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      const gender = "<%= person.gender %>";
      let selectElement = document.getElementById('genderSelect');
      selectElement.value = gender;
      // other option for the above line
      // for(const option of selectElement.options){
      //   if (option.value == gender){
      //     option.selected = true;
      //   }
      // }
      let checkAlive = document.getElementById("aliveChecked");
      const aliveStatus = "<%= person.isalive %>";
      if(aliveStatus === "yes"){
        checkAlive.checked = true;
      }
    </script>
  </body>
</html>